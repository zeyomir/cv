<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:colorEdgeEffect">@color/green</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/grey</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="displayOptions">showHome|useLogo</item>
        <item name="background">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.NoToolbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- region text styles -->
    <style name="Headline1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Headline2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BodyTextRegular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BodyTextBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BodyTextSmallRegular">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BodyTextSmallBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!-- endregion -->

    <style name="PageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/margin_page_sides</item>
        <item name="android:paddingEnd">@dimen/margin_page_sides</item>
        <item name="android:paddingBottom">@dimen/margin_page_bottom</item>
    </style>

</resources>
